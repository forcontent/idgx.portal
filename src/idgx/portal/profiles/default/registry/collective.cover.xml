<?xml version="1.0"?>
<registry
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="idgx.portal">

  <!-- Configurações collective.cover -->
  <record field="layouts"
          interface="collective.cover.controlpanel.ICoverSettings"
          name="collective.cover.controlpanel.ICoverSettings.layouts">
    <field type="plone.registry.field.Dict">
      <key_type type="plone.registry.field.TextLine">
        <title>Name</title>
      </key_type>
      <title>Layouts</title>
      <value_type type="plone.registry.field.TextLine">
        <title>Layout</title>
      </value_type>
    </field>
    <value purge="true">
      <element key="Layout vazio">[{"type": "row", "children": [{"type": "group", "column-size": 12, "roles": ["Manager"]}]}]</element>
    </value>
  </record>

  <record field="searchable_content_types"
          interface="collective.cover.controlpanel.ICoverSettings"
          name="collective.cover.controlpanel.ICoverSettings.searchable_content_types">
    <value>
      <element>Collection</element>
      <element>Image</element>
      <element>Document</element>
      <element>News Item</element>
      <element>Link</element>
    </value>
  </record>

  <!-- grid padrão do collective.cover -->
  <record name="collective.cover.controlpanel.ICoverSettings.grid_system">
    <value>bootstrap3</value>
  </record>

  <!-- estilos do collective.cover -->
  <record field="styles"
          name="collective.cover.controlpanel.ICoverSettings.styles"
          interface="collective.cover.controlpanel.ICoverSettings">
    <value>
      <element>-Default-|tile-default</element>
      <element>Abas|tile-abas</element>
      <element>Bloco Colorido|bloco-colorido</element>
      <element>Blocos de itens|bloco-itens</element>
      <element>Citacao|tile-citacao</element>
      <element>Destaque Topo|destaque-principal</element>
      <element>FAQ|tile-faq</element>
      <element>Foto Sobreposta|foto-sobreposta</element>
      <element>Foto Sobreposta Grande|foto-sobreposta-grande</element>
      <element>Foto Revista|foto-revista</element>
      <element>Lista de itens|lista-itens</element>
      <element>Tag Aviso|tag-aviso</element>
      <element>Tag Comunicado|tag-comunicado</element>
      <element>Tag Urgente|tag-urgente</element>
      <element>Titulo de Secao|titulo-secao</element>
    </value>
  </record>


</registry>
